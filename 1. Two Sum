//code


class Solution {
public:
    vector<int> twoSum(vector<int>& a, int t) {
        int n=a.size();
        vector<int> vec;
        unordered_map<int, int> mp;
        for(int i=0;i<n;i++)
        {
            if(mp.find(t-a[i])!=mp.end())
            {
                vec.push_back(i);
                vec.push_back(mp[t-a[i]]);
                return vec;

            }
            mp[a[i]]=i;
        }

        return vec;
        
        
        
    }
};
